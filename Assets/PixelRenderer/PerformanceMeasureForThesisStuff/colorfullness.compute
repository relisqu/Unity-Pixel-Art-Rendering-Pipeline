// ColourfulnessCompute.compute
#pragma kernel CSMain

RWTexture2D<float4> Result;
Texture2D<float4> Input;

[numthreads(8, 8, 1)]
void CSMain (uint3 id : SV_DispatchThreadID) {
    float4 color = Input[id.xy];
    
    // Transform to opponent color space
    float rg = color.r - color.g;
    float yb = (color.r + color.g) * 0.5 - color.b;
    
    // Write result
    Result[id.xy] = float4(rg, yb, 0, 0);
}
